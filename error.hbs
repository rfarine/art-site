{{!< default-custom}}
{{#contentFor "custom_meta_title"}}{{statusCode}}{{/contentFor}}
<body class="page-error-custom">
    <div class="section-blog-wrap{{#get "tags" limit="all"}}{{#foreach tags visibility="internal"}} {{slug}}{{/foreach}}{{/get}}">
        <div class="section-blog-content{{#if @site.cover_image}} is-cover{{/if}}">
            {{#if @site.cover_image}}
            <div class="blog-cover" style="background-image: url({{@site.cover_image}})"></div>
            {{/if}}
            <div class="section-page-error blog-flex">
                <div class="page-error-wrap">
                    <div class="page-error-header">
                        <a href="{{@site.url}}">{{>icons/blog/arrow_left}}{{t "Back to Homepage"}}</a>
                    </div>
                    <div class="page-error-content blog-flex">
                        <div class="error-wrap">
                            <h1>{{statusCode}}</h1>
                            <p>{{message}}</p>
                            <div class="blog-button-bg">
                                <a href="{{@site.url}}" class="blog-button blog-detail-bg">{{t "Back to Homepage"}}</a>
                            </div>
                        </div>
                    </div>
                    {{#if @site.description}}
                    <div class="page-error-footer">
                        <a href="{{@site.url}}">{{@site.title}}.</a>
                        <span>{{@site.description}}.</span>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    {{ghost_foot}}
</body>