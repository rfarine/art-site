{{!< default-custom}}
{{#contentFor "custom_meta_title"}}{{meta_title}}{{/contentFor}}
<body class="page-contact-custom {{body_class}}">
    <div class="section-blog-wrap{{#get "tags" limit="all"}}{{#foreach tags visibility="internal"}} {{slug}}{{/foreach}}{{/get}}">
        {{#post}}
        <div class="section-blog-content{{#if feature_image}} is-cover{{else}}{{#if @site.cover_image}} is-cover{{/if}}{{/if}}">
            {{#if feature_image}}
            <div class="blog-cover" style="background-image: url({{feature_image}})"></div>
            {{else if @site.cover_image}}
            <div class="blog-cover" style="background-image: url({{@site.cover_image}})"></div>
            {{/if}}
            <div class="section-page-contact blog-flex">
                <div class="page-contact-wrap">
                    <div class="page-contact-header">
                        <a href="{{@site.url}}">{{>icons/blog/arrow_left}}{{t "Back to Homepage"}}</a>
                    </div>
                    <div class="page-contact-content blog-flex">
                        <div class="contact-wrap subscribe-wrap">
                            <h3>{{title}}</h3>
                            <form method="POST" action="{{@custom.contact_form_endpoint}}">
                                <input class="subscribe-email contact-name" required type="text" name="name" placeholder="{{t "Your name"}}">
                                <span class="subscribe-input-line"></span>
                                <input class="subscribe-email contact-email" required type="email" name="email" placeholder="{{t "Your email address"}}">
                                <span class="subscribe-input-line"></span>
                                <textarea class="subscribe-email contact-message" required name="message" placeholder="{{t "Your message"}}"></textarea><br>
                                <div class="blog-button-bg">
                                    <button class="blog-button blog-detail-bg" type="submit">{{t "Send message"}}</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    {{#if @site.description}}
                    <div class="page-contact-footer">
                        <a href="{{@site.url}}">{{@site.title}}.</a>
                        <span>{{@site.description}}.</span>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
        {{/post}}
    </div>
    {{ghost_foot}}
</body>