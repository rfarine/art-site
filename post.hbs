{{!< default}}
{{#post}}
<article class="section-post">
	<div class="section-post-title{{^if feature_image}} no-image{{/if}}">
		{{#if feature_image}}
		<div class="post-title-image blog-image" style="background-image: url({{feature_image}})"></div>
		{{/if}}
		<div class="post-title-wrap blog-flex">
			<div class="post-title-content">
				<div class="blog-tags-wrap">
					{{#if featured}}
					<span class="blog-tag-featured blog-tag">{{t "Featured-post"}}</span>
					{{/if}}
					{{#if tags}}
					{{#foreach tags}}
					<a class="blog-tags blog-tag blog-detail-bg" href="{{url}}">{{name}}</a>
					{{/foreach}}
					{{/if}}
				</div>
				<h1>{{title}}</h1>
				<div class="blog-meta blog-flex">
					{{#primary_author}}
					{{#if profile_image}}
					<a href="{{url}}" class="blog-profile-image" style="background-image: url({{profile_image}})"></a>
					{{/if}}
					{{/primary_author}}
					<div class="meta-author-wrap">
						{{#if authors}}
						{{#foreach authors}}
						{{#if @first}}
						{{^if profile_image}}
						{{t "by"}}
						{{/if}}
						{{/if}}
						{{/foreach}}
						{{/if}}
						{{#has author="count:1"}}
						{{authors}}
						{{else has author="count:2"}}
						{{authors separator=(t " & ")}}
						{{else has author="count:>2"}}
						{{authors}}
						{{/has}}
						<time datetime="{{date format="YYYY-MM-DD"}}">â€” {{date published_at timeago="true"}}</time>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="section-post-content blog-detail-post blog-detail-hover{{^if feature_image}} no-image{{/if}}{{^if access}} members-content{{/if}}">
		{{#if access}}
		{{content}}
		{{>post_share}}
		{{else}}
		{{{html}}}
		{{>members/cta}}
		{{/if}}
	</div>
</article>
{{>post_navigation}}
{{#if access}}
{{#if @custom.disqus_shortname}}
{{^has tag="#disqus-disable"}}
	{{>services/disqus}}
{{/has}}
{{else if comments}}
<div class="section-comments">
	{{comments title=(t "Member discussion") mode="auto"}}
</div>
{{/if}}
{{/if}}
{{/post}}