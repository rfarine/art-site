{{#get "authors" limit="20" include="count.posts" order="count.posts desc"}}
<div class="search-suggestion-authors blog-tags-wrap">
	{{#foreach authors}}
	{{#if @first}}
	<h3>{{t "May we suggest an author?"}}</h3>
	<a class="blog-tags blog-tag blog-detail-bg" href="{{url}}">{{name}}</a>
	{{else}}
	<a class="blog-tags blog-tag blog-detail-bg" href="{{url}}">{{name}}</a>
	{{/if}}
	{{/foreach}}
</div>
{{/get}}